CC = $(MPICC)

all: libsuperlu

libsuperlu:
	@echo Start building SuperLU...
	cp make.inc.superlu SuperLU/make.inc
	cd $(THIS_DIR)/external/SuperLU/SuperLU && make
	mkdir -p $(THIS_DIR)/external/include
	mkdir -p $(THIS_DIR)/external/lib
	-cp $(THIS_DIR)/external/SuperLU/SuperLU/SRC/*.h $(THIS_DIR)/external/include/.
	@echo SuperLU installed.

clean:
	cd $(THIS_DIR)/external/SuperLU/SuperLU && make clean
